{
    "name": "Viaplay-Subtitles",
    "main": "index.js",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "start": "node index.js",
        "css": "node-sass src/scss/style.scss dest/css/style.min.css --output-style compressed",
        "js": "uglifyjs src/js/custom.js --compress --mangle --output dest/js/custom.min.js && uglifyjs src/js/background.js --compress --mangle --output dest/js/background.min.js",
        "copy": "copyfiles -u 4 node_modules/bootstrap/dist/css/bootstrap.min.css dest/css && copyfiles -u 3 node_modules/vanilla-picker/dist/vanilla-picker.min.js dest/js",
        "watch:css": "yarn css -w"
    },
    "dependencies": {
        "bootstrap": "^4.1.1",
        "copyfiles": "^2.0.0",
        "node-sass": "^4.9.0",
        "uglify-js": "^3.3.23",
        "vanilla-picker": "^2.1.0"
    }
}
