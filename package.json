{
    "name": "Viaplay-Subtitles",
    "main": "index.js",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "start": "node index.js",
        "css": "node-sass src/scss/style.scss dest/css/style.css --output-style compressed",
        "js": "uglifyjs src/js/custom.js --compress --mangle --output dest/js/custom.min.js",
        "copy": "copyfiles -u 3 node_modules/jquery/dist/jquery.min.js dest/js",
        "watch:css": "yarn css -w"
    },
    "dependencies": {
        "jquery": "^3.3.1",
        "node-sass": "^4.9.0",
        "uglify-js": "^3.3.23"
    }
}