{
    "manifest_version": 2,
    "name": "Viaplay Subtitles",
    "short_name": "VS",
    "version": "1.1.0",
    "description": "Makes it possible to change the background and text color of Viaplay's media player to whatever color you'd want.",
    "author": "Daniel Winther",
    "icons": {
        "128": "dest/img/icon128.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "persistent": false,
        "scripts": ["dest/js/jquery.min.js", "dest/js/background.min.js"]
    },
    "content_scripts": [{
        "matches": ["https://*/*"],
        "include_globs": ["https://viaplay.*/*"],
        "css": ["dest/css/style.min.css"],
        "js": ["dest/js/jquery.min.js", "dest/js/spectrum.min.js", "dest/js/custom.min.js"],
        "run_at": "document_end"
    }],
    "permissions": [
        "storage"
    ]
}